@model ClientWebApp_MVC_.Models.FlightModels

@{
    ViewData["Title"] = "DetailsFlight";
}

<h1>Flight details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>

<div>

    @using (Html.BeginForm("Buy", "Home", new { id = Model.FlightNo, price = Model.Price }))
    {
        <label for="FullName">Name: </label><br>
        <input type="text" id="FullName" class="form-control" required="required" name="FullName" placeholder="Emilie" size="10"><br>
        <input type="text" id="Destination" class="form-control" required="required" name="Destination" value=" @Html.ValueFor(model => model.Destination)" hidden="hidden" size="10"><br>
        <input type="text" id="Date" class="form-control" required="required" name="Date" value=" @Html.ValueFor(model => model.Date)" hidden="hidden" size="10"><br>
        <input type="text" id="FlightNo" class="form-control" required="required" name="FlightNo" value=" @Html.ValueFor(model => model.FlightNo)" hidden="hidden" size="10"><br>

        <button class="button button" style="vertical-align:middle" onclick="@("window.location.href='" + @Url.Action("Buy", "Home") + "'");"><span>Buy this ticket </span></button>


    }

    <hr />
    <a asp-action="Index">Back to List</a>
</div>

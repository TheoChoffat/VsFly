@model IEnumerable<ClientWebApp_MVC_.Models.BookingModel>

@{
    ViewData["Title"] = "IndexBooking";
}

<h1>IndexBooking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerId)
            </td>
            <td>
                <a id="button" asp-action="Details" asp-route-id="@item.FlightNo">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
